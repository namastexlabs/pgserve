{
  "name": "pgserve",
  "version": "1.1.3-rc.5",
  "description": "Embedded PostgreSQL server with true concurrent connections - zero config, auto-provision databases",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "pgserve": "./bin/pgserve-wrapper.cjs"
  },
  "scripts": {
    "bench": "bun tests/benchmarks/runner.js",
    "test": "bun test tests/**/*.test.js",
    "test:watch": "bun test --watch tests/**/*.test.js",
    "dev": "bun --watch bin/pglite-server.js",
    "start": "bun bin/pglite-server.js",
    "build": "bun build --compile bin/pglite-server.js --outfile dist/pgserve",
    "build:all": "make build-all",
    "lint": "eslint src/ bin/",
    "lint:fix": "eslint src/ bin/ --fix",
    "deadcode": "knip",
    "test:npx": "scripts/test-npx.sh",
    "prepublishOnly": "npm run lint && npm run deadcode && npm run test:npx",
    "prepare": "husky"
  },
  "keywords": [
    "postgresql",
    "embedded",
    "database",
    "postgres",
    "development",
    "multi-tenant"
  ],
  "author": "Namastex Labs <labs@namastex.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/namastexlabs/pgserve.git"
  },
  "bugs": {
    "url": "https://github.com/namastexlabs/pgserve/issues"
  },
  "homepage": "https://github.com/namastexlabs/pgserve#readme",
  "optionalDependencies": {
    "@embedded-postgres/darwin-arm64": "17.7.0-beta.15",
    "@embedded-postgres/darwin-x64": "17.7.0-beta.15",
    "@embedded-postgres/linux-x64": "17.7.0-beta.15",
    "@embedded-postgres/windows-x64": "17.7.0-beta.15"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.2.17",
    "eslint": "^9.39.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "knip": "^5.71.0",
    "lint-staged": "^16.2.7",
    "pg": "^8.16.3"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix"
    ],
    "bin/**/*.js": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "bun": "^1.3.4"
  }
}
